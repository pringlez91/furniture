<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <i class="fab fa-product-hunt"></i> ADD PRODUCTS
      </h1>
      <% include ./partials/messages %>
      <form action="/vendor/addp" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="name" id="name" name="name" class="form-control" placeholder="Enter Name" value="<%= typeof name != 'undefined' ? name : '' %>" />
        </div>
        <div class="form-group">
          <label class="control-label">Price</label>
          <div class="form-group">
            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text">$</span>
              </div>
              <input name="price" type="number"" class=" form-control">
            </div>
          </div>
        </div>
        <div class="form-group">
          <label for="style">Style</label>
          <select name="style">
            <option value="modern" selected>Modern</option>
            <option value="antique">Antique</option>
          </select>
        </div>
        <div class="form-group">
          <label for="location">Availability Country</label>
          <select name="location">
            <option value="can" selected>Canada</option>
            <option value="usa">USA</option>
          </select>
        </div>
        <div class="form-group">
          <label>UPLOAD IMAGE</label>
          <input type="file" name="ImageN" class="form-control-file">
        </div>
        <button type="submit" class="btn btn-primary btn-block">
          Add
        </button>
      </form>
    </div>
  </div>
</div>
  <style type="text/css">
    #navb {
      display: none;
    }
  </style>
